{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"files": {
		"maxSize": 5242880,
		"ignore": ["node_modules", "dist", ".next", "prisma", "public"]
	},
	"linter": {
		"rules": {
			"a11y": {
				"noAutofocus": "off",
				"useKeyWithClickEvents": "warn"
			},
			"style": {
				"useSelfClosingElements": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off"
			}
		}
	}
}
